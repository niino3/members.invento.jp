rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // サービスログの画像ファイル
    match /service-logs/{logId}/{imageFile} {
      // 認証されたユーザーは全アクセス可能（一時的な修正）
      allow read, write: if request.auth != null;
    }
    
    // その他のファイル（今後追加される可能性）
    match /{allPaths=**} {
      // 認証されたユーザーは全アクセス可能（一時的な修正）
      allow read, write: if request.auth != null;
    }
  }
}